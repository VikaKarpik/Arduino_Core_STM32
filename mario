#include <cs50.h>
#include <stdio.h>

int main(void)
{int Висота = get_int("Висота: ");
    if (Висота==1)
    {
        printf ("#");
    }
    if (Висота==2)
    {
        printf ("#\n##\n");
    }
    if (Висота==3)
    {
        printf ("#\n##\n###\n");
    }
    if (Висота==4)
    {
        printf ("#\n##\n###\n####\n");
    }
    if (Висота==5)
    {
        printf ("#\n##\n###\n####\n#####\n");
    }
    if (Висота==6)
    {
        printf ("#\n##\n###\n####\n#####\n######\n");
    }
    if (Висота==7)
    {
        printf ("#\n##\n###\n####\n#####\n######\n#######\n");
    }
    if (Висота==8)
    {
        printf ("#\n##\n###\n####\n#####\n######\n#######\n########\n");
    }
    if (Висота<1 || Висота>8)
    {
        printf ("Введи число від 1 до!\n");
    }
}
